extends layout

block header
  title= "Settings"

block sources
  script(type="text/javascript", src='../js/settings.js')
  link(rel="stylesheet", type="text/css", href="../css/settings.css")

block content
  div(class="large-5 large-centered columns" id="settings-container")
    h2= "Account Settings"
    div(class="medium-5" id="shared-table")
      div(class="row")
        table(class="hover")
          th="Data shared with:"
          each person in shared
            tr  
              td= person  
      div(class="row")
        form
          div(class="medium-7 medium-centered columns" id="add-user-form")
            label= "Share your tables with other users:"
              input(type="text" id="newuser" placeholder="username")
            div(class="medium-12 columns")
              a(title="Add new shared user", class="button", id="add-button", disabled) Add
